extends layout.pug

block content
    |   <script type="text/javascript">var uid="#{poll.uid}";</script>

    div(class="col-xs-12")
        div(class="col-xs-12" id="poll")  

            div(class="col-xs-6")
                form(id="votePoll" method='post' action="/poll/vote/" + poll.uid)
                    div(class="col-xs-12")  
                    div(class="col-xs-12")  
                        h5(class="pull-left")=" Question?  "
                    div(class="col-xs-12")  
                        h4(class="lead notice")
                            strong=poll.title
                    div(class="col-xs-12")  
                        |   I'd like to vote for 
                        select(id="options")
                            each val in polloptions.length ? polloptions : ['There are no values']
                                option(class="list-group-item-heading")=val.name 
                        div(class="col-xs-12 clearfix result")  
                        div(class="col-xs-12 clearfix")  
                            button(type="submit" value="submit" class="btn pull-right") submit
            div(class="col-xs-6" id='view')
                canvas(id="myChart" width="400" height="400")



